@model AppDeBase.Site.ViewModels.ProduitViewModel

@{
    ViewData["Title"] = "Supprimir " + Model.Nom;
}

<h4 style="padding-top: 50px">@ViewData["Title"] </h4>

<h5>Você tem certeza disso?</h5>

<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Image" alt="@Model.Image" style="width: 300px; height: 428px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.FournisseurId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Fournisseur.Nom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Valeur)
            </dt>
            <dd>
                @Model.Valeur.ToString("C")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateInscription)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateInscription)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>
        </dl>

        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Supprimir" class="btn btn-danger" />
                <a class="btn btn-info" asp-action="Index">Retourner</a>
            </form>
        </div>
    </div>
</div>